    local_cache_file = "local_rifts_cache.json", -- —Ñ–∞–π–ª –¥–ª—è –ª–æ–∫–∞–ª—å–Ω–æ–≥–æ –∫–µ—à–∞
    cache_ttl = 900, -- –≤—Ä–µ–º—è –∂–∏–∑–Ω–∏ –∫–µ—à–∞ –≤ —Å–µ–∫—É–Ω–¥–∞—Ö (15 –º–∏–Ω—É—Ç)
